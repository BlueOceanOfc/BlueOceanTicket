{
  "name": "automacao-cancelamento",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Aplicação de Automação para Cancelamento",
  "author": "Seu Nome",
  "license": "ISC",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "chcp 65001 && electron .",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "automação",
    "cancelamento",
    "electron"
  ],
  "dependencies": {
    "@google-cloud/translate": "^9.0.1",
    "axios": "^1.9.0",
    "chalk": "^4.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "franc-min": "^6.2.0",
    "google-auth-library": "^9.15.1",
    "google-spreadsheet": "^4.1.4",
    "openai": "^4.87.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.seu.nome.automacao",
    "productName": "Automacao Cancelamento",
    "files": [
      "**/*"
    ],
    "extraFiles": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "win": {
      "icon": "capa.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "capa.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "capa.png",
      "target": "AppImage"
    }
  }
}
